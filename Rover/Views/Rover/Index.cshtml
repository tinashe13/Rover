@{
    ViewData["Title"] = "Home Page";
}

@using Rover.Models
@model Plateau

<div class="auth-one-bg-position auth-one-bg" id="auth-particles">
    <div class="bg-overlay"></div>

    <div class="shape">
        <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
            <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
        </svg>
    </div>
</div>


<div class="auth-page-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center mt-sm-5 mb-4 text-white-50">
                    <div>
                        <a href="index.html" class="d-inline-block auth-logo">
                            <img src="assets/Thrive+logo.png" alt="" height="60">
                        </a>
                    </div>
                    <p class="mt-3 fs-15 fw-medium">Mars Rover</p>
                </div>
            </div>
        </div>
        <!-- end row -->

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card mt-4">

                    <div class="card-body p-4">
                        <div class="text-center mt-2">
                            <h5 class="text-primary">Enter Instructions</h5>
                            <p class="text-muted">-</p>
                        </div>

                        <div class="p-2 mt-4">
                            <form asp-controller="Home" asp-action="Index" method="post">
                                <div class="mb-3">
                                    <label class="form-label">Instructions</label>
                                    <textarea class="form-control" id="instruction" name="instruction" rows="8" required></textarea>
                                </div>
                                <div class="mb-2 mt-4">
                                    <button class="btn btn-success w-100" type="submit">Explore</button>
                                </div>
                            </form><!-- end form -->

                        </div>
                    </div>
                    <!-- end card body -->
                </div>
                <!-- end card -->

                <div class="mt-4 text-center">
                    <p class="mb-0"> <a href="https://github.com/tinashe13/Rover.git" class="fw-semibold text-primary text-decoration-underline"> Github Repo </a> </p>
                </div>

            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>

@if (ViewBag.RoverResponses != null)
{
    <h2>Results:</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Rover</th>
                <th scope="col">Position</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < ViewBag.RoverResponses.Count; i++)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@ViewBag.RoverResponses[i]</td>
                </tr>
            }
        </tbody>
    </table>
}
